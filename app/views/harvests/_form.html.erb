      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.radio_button :type, :checked => false %>
  <%= label_tag 1, 'Turkey' %>
  
  <%= f.radio_button :type, :checked => false %>
  <%= label_tag 2, 'Deer' %>
  
  <%= f.radio_button :type, :checked => false %>
