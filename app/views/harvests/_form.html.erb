<%= form_for @harvest, html: { multipart: true } do |f| %>
  <% if @harvest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@harvest.errors.count, "error") %> prohibited this pet from being saved:</h2>
 
      <ul>
      <% @harvest.errors.full_messages.each do |message| %>
